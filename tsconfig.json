{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2017",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "next-env.d.ts",
    "twin.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.css",
    "**/*.scss",
  ],
  "exclude": [
    "node_modules"
  ]
}